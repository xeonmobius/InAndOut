@model IEnumerable<InAndOut.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="ExpenseType" asp-action="Create">
                Create new Expense Type
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="50%">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-primary mx-1" asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@obj.Id">
                                Update
                            </a>
                            <a class="btn btn-danger mx-1" asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@obj.Id">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>